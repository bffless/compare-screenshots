{
  "name": "@bffless/compare-screenshots",
  "version": "1.1.0",
  "description": "GitHub Action to compare screenshots against a BFFLESS baseline for visual regression testing",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --license licenses.txt",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' '__tests__/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bffless/compare-screenshots.git"
  },
  "keywords": [
    "github-action",
    "visual-regression",
    "screenshots",
    "bffless",
    "pixelmatch"
  ],
  "author": "BFFLESS",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "archiver": "^7.0.1",
    "form-data": "^4.0.0",
    "mime-types": "^2.1.35",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.11.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@vercel/ncc": "^0.38.1",
    "prettier": "^3.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
